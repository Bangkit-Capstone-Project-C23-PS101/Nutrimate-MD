<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.HomeFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="320dp"
            android:layout_height="100dp"
            app:cardBackgroundColor="#212121"
            app:cardCornerRadius="25dp"
            android:layout_gravity="center_horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_home_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#FFFFFF"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        android:text="Hey, Guest"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#FFFFFF"
                        android:layout_marginLeft="20dp"
                        android:text="What are we eating today?"/>
                </LinearLayout>
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/button_add"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:fabCustomSize="40dp"
                    app:maxImageSize="20dp"
                    android:layout_marginRight="20dp"
                    app:backgroundTint="#181818"
                    android:src="@drawable/ic_capture"
                    app:tint="#E6C207"
                    android:layout_gravity="center" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"/>
        <androidx.cardview.widget.CardView
            android:id="@+id/cardview_food"
            android:layout_width="320dp"
            android:layout_height="500dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="25dp"
            android:layout_gravity="center_horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="225dp">
                    <ImageView
                        android:id="@+id/img_home_food"
                        android:layout_width="match_parent"
                        android:layout_height="225dp"
                        android:src="@drawable/ic_place_holder"/>
                </FrameLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Makanan"
                    android:layout_gravity="left|bottom"
                    android:layout_marginLeft="15dp"/>
                <TextView
                    android:id="@+id/tv_home_foodname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Place Holder"
                    android:layout_marginLeft="15dp"
                    android:textSize="20dp"
                    android:layout_gravity="left|bottom"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="15dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:layout_marginHorizontal="15dp">
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        app:cardCornerRadius="38dp"
                        app:strokeColor="#E6C207"
                        app:strokeWidth="6dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <TextView
                                android:id="@+id/tv_home_calorie"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="130 cal"
                                android:textColor="@color/black"
                                android:layout_gravity="center"
                                android:gravity="center"/>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                    <LinearLayout
                        android:layout_width="70dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:textSize="20dp"
                            android:text="39.1 g"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:textSize="15dp"
                            android:text="Carbs"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="70dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:textSize="20dp"
                            android:text="50 g"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:textSize="15dp"
                            android:text="Fat"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="70dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:textSize="20dp"
                            android:text="25.4 g"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:textSize="15dp"
                            android:text="Protein"/>

                    </LinearLayout>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="10dp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/black"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"/>
                <TextView
                    android:id="@+id/tv_home_description"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lorem Ipsum"
                    android:layout_marginHorizontal="20dp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp">
                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/button_cross"
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:backgroundTint="#C86666"
                        app:icon="@drawable/ic_cross"
                        app:iconPadding="0dp"
                        app:iconGravity="textStart"/>
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/button_check"
                        android:layout_marginHorizontal="10dp"
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:backgroundTint="#73B269"
                        app:icon="@drawable/ic_check"
                        app:iconPadding="0dp"
                        app:iconGravity="textStart"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>




</FrameLayout>